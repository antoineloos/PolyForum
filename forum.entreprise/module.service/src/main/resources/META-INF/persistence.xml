<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence                                  http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="polyforum2" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>forum.app.dao.model.ChoixCandidat</class>
    <class>forum.app.dao.model.Salle</class>
    <class>forum.app.dao.model.Entreprise</class>
    <class>forum.app.dao.model.Candidat</class>
    <class>forum.app.dao.model.Entretien</class>
    <class>forum.app.dao.model.ChoixEntreprise</class>
    <properties>
      <property name="javax.persistence.jdbc.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/polyforum?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
